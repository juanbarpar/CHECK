<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_cont"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/check1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Principal.Fragmentos.HomeFragment"
    android:orientation="vertical">



    <!-- Barra superior -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/check1.2"
            >


        </View>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expedicionesT"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"

            app:cardBackgroundColor="@color/check1"
            app:layout_constraintBottom_toBottomOf="@id/actionbar"
            >


                <me.ibrahimsn.lib.SmoothBottomBar
                    android:id="@+id/bar_blo"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:iconSize="20dp"
                    app:iconTint="@color/check1"
                    app:backgroundColor="@color/check1.2"
                    app:iconTintActive="@color/white"
                    app:indicatorColor="@color/check1"
                    app:indicatorRadius="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:menu="@menu/blog_menu"
                    app:textSize="18sp"

                    />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/main_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="Blog de viaje"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>








        <!-- Contenido -->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/actionbar"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Albumes Check"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:id="@+id/view_album"

                    />


            </LinearLayout>



            <TextView
                android:id="@+id/text_ultimo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ultimas fotos"

                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actionbar"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/view_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:clipToPadding="false"

                app:layout_constraintTop_toBottomOf="@id/text_ultimo"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>













        <!-- Subir foto  -->


        <LinearLayout
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/main_social"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"

            android:layout_marginEnd="20dp"
            android:id="@+id/buttonUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:onClick="showImageOp"
            tools:layout_editor_absoluteX="294dp"
            tools:layout_editor_absoluteY="15dp"
            android:orientation="horizontal"
            >
            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:tint="@color/check1"
                app:riv_corner_radius="10dp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subir foto"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/check1"></TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>